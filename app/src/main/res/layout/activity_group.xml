<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/layout_no_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btn_create_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="새 그룹 만들기 (방장 되기)" />

        <EditText
            android:id="@+id/et_join_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="참여 코드 6자리 입력"
            android:inputType="number"
            android:maxLength="6" />

        <Button
            android:id="@+id/btn_join_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="코드로 참여하기" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_in_group"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_group_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="입장 코드: 000000"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="16dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_ranking"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btn_leave_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="그룹 나가기"
            android:backgroundTint="#3F51B5" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>